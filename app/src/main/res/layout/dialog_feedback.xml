<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre adresse mail :" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/feedbackMail"
        android:nextFocusDown="@+id/feedbackSubject"
        android:imeOptions="actionNext"/>

    <TextView
        android:text="Objet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailSubject"
        android:id="@id/feedbackSubject"
        android:nextFocusDown="@+id/feedbackBody"
        android:imeOptions="actionNext"/>

    <TextView
        android:text="Votre message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:id="@id/feedbackBody"
        android:imeOptions="actionDone"
        android:lines="4" />

</LinearLayout>